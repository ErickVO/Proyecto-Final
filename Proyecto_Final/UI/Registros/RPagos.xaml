                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Label Content="Fecha Creacion: " Grid.Row="16" Grid.Column="5" FontSize="16"/>
        <Label Content="" Grid.Row="17" Grid.Column="5" FontSize="16"/>
        <Label Content="Fecha Modificacion: " Grid.Row="19" Grid.Column="5" FontSize="16"/>
